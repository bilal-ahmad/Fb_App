.page
  #primary
    .text
      %fieldset.col-3
        %legend
          %h1 Edit Post
          %br/
          = link_to 'Create Post', new_social_post_path
          = link_to '| Show All', social_posts_path
        - if @social_post.blank?
          #error_explanation
            %u
              %li
                There is no default post.
        - else
          = form_for(@social_post, :url => update_default_post_path) do |f|
            %ul.no_border
              = flash_messages
              = error_messages(@social_post)
              %li.col-span-2
                %label.input-text
                  %span.label.hd Post
              %ul.posts
                %li.col-span-2
                  %label.input-text
                    %span.label Name
                    = f.text_field :name, :class => "txarea1"
                %li.col-span-2
                  %label.input-text
                    %span.label Link
                    = f.text_field :link, :class => "txarea1"
                %li.col-span-2
                  %label.input-text
                    %span.label Picture
                    = f.text_field :picture, :class => "txarea1"
                %li.col-span-2
                  %label.input-text
                    %span.label Caption
                    = f.text_field :caption, :class => "txarea1"
                %li.col-span-2
                  %label.input-text
                    %span.label Description
                    = f.text_area :description, :class => "txarea1"
            %p.buttons{:style => "margin-top:0px;"}
              %button.primary-call{:type => "submit", :name => "sap", :value => "sap"} Save
              = link_to 'Back', social_apps_path






