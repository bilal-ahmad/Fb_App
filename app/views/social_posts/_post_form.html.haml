= form_for(@social_post) do |f|
  = f.hidden_field :post_type, :value => "post"
  %ul.no_border
    = flash_messages
    = error_messages(@social_post)
    %li.col-span-2
      %label.input-text
        %span.label.hd Select Application
    %ul.permissions
      - @apps.each do |app|
        %li
          %label
            = check_box_tag "apps[]", "#{app.id}", false
            %span.remember_me
              =app.name
    %li.col-span-2
      %label.input-text
        %span.label.hd Select Country
    %ul.permissions
      - @countries.each do |country|
        %li
          %label
            = check_box_tag "countries[]", "#{country.name}", false
            %span.remember_me
              =country.name
      %li
        %label
          = check_box_tag "countries[]", "all", false
          %span.remember_me All
    %li.col-span-2.clear
      %label.input-text
        %span.label.hd Post
    %ul.posts
      %li.col-span-2
        %label.input-text
          %span.label Name
          = f.text_field :name, :class => "txarea1"
      %li.col-span-2
        %label.input-text
          %span.label Link
          = f.text_field :link, :class => "txarea1"
      %li.col-span-2
        %label.input-text
          %span.label Picture
          = f.text_field :picture, :class => "txarea1"
      %li.col-span-2
        %label.input-text
          %span.label Caption
          = f.text_field :caption, :class => "txarea1"
      %li.col-span-2
        %label.input-text
          %span.label Description
          = f.text_area :description, :class => "txarea1"
  %p.buttons{:style => "margin-top:0px;"}
    %button.primary-call{:type => "submit", :name => "sad", :value => "sad"} Save
    = link_to 'Back', social_apps_path





