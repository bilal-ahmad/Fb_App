.page
  #primary
    .text
      %h1 Post
      %br/
      = link_to 'Edit', edit_social_post_path(@social_post)
      = link_to '| Show All', social_posts_path
      %table.show_table
        %tr
          %td.title Owner
          %td= current_user.email
        %tr
          %td.title Name
          %td= @social_post.name
        %tr
          %td.title Link
          %td= @social_post.link
        %tr
          %td.title Picture
          %td= @social_post.picture
        %tr
          %td.title Caption
          %td= @social_post.caption
        %tr
          %td.title Description
          %td= @social_post.description
        %tr
          %td.title Message
          %td= @social_post.message
        %tr
          %td.title Wall Post Enable
          %td= @social_post.wall_post
        %tr
          %td.title Welcome Status Update
          %td= @social_post.status_update
        %tr
          %td.title Chatt Message
          %td= @social_post.chatt_message
        %tr
          %td.title Photo Message
          %td= @social_post.photo_message
        %tr
          %td.title Photo Path
          %td= @social_post.photo_path


