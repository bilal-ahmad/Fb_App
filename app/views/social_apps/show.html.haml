.page
  #primary
    .text
      %h1 Applications
      %br/
      = link_to 'Create New App', new_social_app_path
      = link_to '| Show All', social_apps_path
      %table.show_table
        %tr
          %td.title Provider
          %td= @social_app.provider.titleize
        %tr
          %td.title Name
          %td= @social_app.name
        %tr
          %td.title Logo
          %td= image_tag @social_app.setting.logo_url
        %tr
          %td.title Icon
          %td= image_tag @social_app.setting.icon_url
        %tr
          %td.title Facebook ID
          %td= @social_app.setting.facebook_id
        %tr
          %td.title Facebook Secret
          %td= @social_app.setting.facebook_secret
        %tr
          %td.title Status
          %td= @social_app.setting.status
        %tr
          %td.title Application Link
          %td= @social_app.setting.link
        %tr
          %td.title Application Namespace
          %td= @social_app.setting.namespace
        %tr
          %td.title Canvas URL
          %td= @social_app.setting.canvas_url
        %tr
          %td.title Callback URL
          %td= @social_app.setting.callback_url
        %tr
          %td.title Permissions
          %td= @social_app.setting.permissions

